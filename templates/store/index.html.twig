{% extends 'base.html.twig' %}

{% block title %}Médiathèque - Articles{% endblock %}

{% block body %}
    <div class="products-list">
        {% for product in products %}
            <div class="product">
                <p>"{{ product.name }}"</p>
                <img src="{{ asset('img/article.png') }}" alt="Article" />
                <p>{{ product.quantity }} exemplaire(s) disponible(s)</p>
                <a class="add_to_cart btn btn-primary" href="{{ path('cart_add', {id: product.id}) }}">Ajouter au panier</a>
            </div>
        {% else %}
            <h2>Aucun produit disponible.</h2>
        {% endfor %}
    </div>
{% endblock %}
{% block stylesheets %}

    {{ encore_entry_link_tags('app') }}

{% endblock %}